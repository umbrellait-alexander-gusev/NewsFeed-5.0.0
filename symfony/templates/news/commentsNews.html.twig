{% block comment %}
    {% for comment in comments %}
        <div class="row py-3 border-top">
            <div class="col-md-8">
                <div class="pb-2">
                    <h5 class="h5 mb-0">{{ comment.userName }}</h5>
                </div>

                <p>{{ comment.textComment }}</p>

                <ul class="list-inline d-flex my-0">
                    <li class="list-inline-item">
                        <a class="text-primary text-decoration-none" href="#">
                            <i class="far fa-thumbs-up"></i>
                            {{ comment.countLike }}
                        </a>
                    </li>

                    <li class="list-inline-item">
                        <a class="text-danger text-decoration-none" href="#">
                            <i class="far fa-thumbs-down"></i>
                            {{ comment.countDislike }}
                        </a>
                    </li>

                    <li class="list-inline-item ml-auto">
                        <span class="font-italic">{{ comment.dateCreated|date("d/m/Y") }}</span>
                    </li>
                </ul>
            </div>
        </div>
    {% endfor %}
{% endblock %}
